{
    "name": "levgenij/laravel-translatable",
    "description": "Translatable Eloquent models with separate translation tables.",
    "keywords": ["translatable", "eloquent", "laravel", "model", "translate", "i18n"],
    "license": "MIT",
    "authors": [
        {
            "name": "Levgenij",
            "role": "Maintainer"
        }
    ],
    "require": {
        "php": "^8.2",
        "illuminate/database": "^11.0|^12.0",
        "illuminate/support": "^11.0|^12.0",
        "illuminate/cache": "^11.0|^12.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.0",
        "orchestra/testbench": "^9.0|^10.0"
    },
    "extra": {
        "laravel": {
            "providers": [
                "Levgenij\\LaravelTranslatable\\TranslatableServiceProvider"
            ]
        }
    },
    "autoload": {
        "psr-4": {
            "Levgenij\\LaravelTranslatable\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Levgenij\\LaravelTranslatable\\Tests\\": "tests/"
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
